@model Movies

<form method="post">
     <input asp-for="Id" hidden/> 
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-black">Delete Movie Category</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="ModelOnly"></div> *@
        <div class="mb-3 p-1">

            <label class="p-0" asp-for="Name">
                @* // Movie Category Name *@
            </label>
            <input asp-for="Name" disabled type="text" class="form-control" />

        </div>
        <div class="mb-3 p-1">
            <label asp-for="DisplayOrder" class="p-0">
                @* Display Order *@
            </label>
            <input asp-for="DisplayOrder" disabled type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>

            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Movies" asp-action="Index" class="btn btn-secondary border form-control">
                    Back To List
                </a>
            </div>
        </div>

    </div>
</form>

