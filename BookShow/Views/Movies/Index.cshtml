@model List<Movies>

    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-Dark">Movie Category</h2>
            </div>
             <div class="col-6 text-end"> 
                 <a asp-controller="Movies" asp-action="Create"class="btn btn-dark">
                <i class="bi bi-plus-circle"></i> 
                Create New Movie Category
                 </a>
             </div>
        </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Movie Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Movies" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-dark mx-2">
                                <i class="bi bi-pencil-fill"></i> Edit
                            </a>
                            <a asp-controller="Movies" asp-action="Delete" asp-route-id="@obj.Id"  class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    </div>

